@{
}
@model List<Nation>

<div class="row">
    <table class="table table-light table-striped col-8 text-center">
        <thead>
            <tr>
                <th>
                    Id Nation
                </th>
                <th>
                    Nation Name
                </th>
                <th>
                    Id Year
                </th>
                <th>
                    Year
                </th>
                <th>
                    Population
                </th>
                <th>
                    Slug Nation
                </th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @item.Id_Nation
                    </td>
                    <td>
                        @item.Nation_Name
                    </td>
                    <td>
                        @item.Id_Year
                    </td>
                    <td>
                        @item.Year
                    </td>
                    <td>
                        @item.Population
                    </td>
                    <td>
                        @item.Slug_Nation
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
