@{
}
@model Post

@using (Html.BeginForm("Edit", "Post", FormMethod.Post, new { htmlAttributes = new { @class = "form-class" } }))
{
    <div>
        @Html.LabelFor(model => model.id)
        @Html.TextBoxFor(model => model.id, new { @class = "form-control" })
    </div>

    <div>
        @Html.LabelFor(model => model.title)
        @Html.TextBoxFor(model => model.title, new { @class = "form-control" })
    </div>

    <div>
        @Html.LabelFor(model => model.body)
        @Html.TextBoxFor(model => model.body, new { @class = "form-control" })
    </div>

    <div>
        @Html.LabelFor(model => model.userId)
        @Html.TextBoxFor(model => model.userId, new { @class = "form-control" })
    </div>

    <button type="submit" class="btn btn-primary">Submit</button>
}