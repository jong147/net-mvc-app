@{
}

@model Clients

<div class="row">
    <form asp-action="Delete" class="offset-4 col-8">
        <div class="row">
            Are you sure you want to remove this client?
        </div>
        <div class="row">
            <input asp-for="Country" hidden />
            <input asp-for="Id" hidden />
            <input asp-for="Name" hidden />
            <input asp-for="Phone" hidden />
            <input asp-for="Category" hidden />
            <div class="offset-4 col-4 text-center">
                <input type="submit" value="Delete Client" class="btn btn-danger" />
            </div>
            <div class="col-4 text-center">
                <a href="@Url.Action("Index", "Clients")" class="btn btn-light">Go back</a>
            </div>
        </div>
    </form>
</div>