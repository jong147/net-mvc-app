@{
}
@model Clients

<div class="row">
    <form asp-action="Create" class="offset-4 col-8">
        <div class="row">
            <div class="form-group col-6">
                <label class="form-label">
                    Country
                </label>
                <input asp-for="Country" class="form-control" type="text" />
            </div>
            <div class="form-group col-6">
                <label class="form-label">
                    Id
                </label>
                <input asp-for="Id" class="form-control" type="text" />
            </div>
        </div>
        <div class="row">
            <div class="form-group col-6">
                <label class="form-label">
                    Name
                </label>
                <input asp-for="Name" class="form-control" type="text" />
            </div>
            <div class="form-group col-6">
                <label class="form-label">
                    Phone
                </label>
                <input asp-for="Phone" class="form-control" type="text" />
            </div>
        </div>
        <div class="row">
            <div class="form-group col-6">
                <label class="form-label">
                    Category
                </label>
                <input asp-for="Category" class="form-control" type="number" />
            </div>
            <div class="form-group col-6 text-center">
                <input type="submit" value="Add Client" class="btn btn-primary" />
            </div>
        </div>
    </form>
</div>