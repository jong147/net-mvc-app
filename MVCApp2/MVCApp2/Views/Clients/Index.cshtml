@model IEnumerable<Clients>

<a href="@Url.Action("Create", "Clients")" class="btn btn-primary">Create</a>

<table class="table table-striped">
    <thead>
        <tr>
            <th>
                Country
            </th>
            <th>
                Id
            </th>
            <th>
                Name
            </th>
            <th>
                Phone
            </th>
            <th>
                Category
            </th>
            <th>
                Options
            </th>
        </tr>
    </thead>
    <tbody>
        @* @await foreach (Clients item in Model) *@
        @foreach (Clients item in Model)
        {
            <tr>
                <td>
                    @item.Country
                </td>
                <td>
                    @item.Id
                </td>
                <td>
                    @item.Name
                </td>
                <td>
                    @item.Phone
                </td>
                <td>
                    @item.Category
                </td>
                <td>
                    <a href="@Url.Action("Edit", "Clients", new { Id = item.Id})" class="btn btn-success">Edit</a>
                    <a href="@Url.Action("Delete", "Clients", new { Id = item.Id })" class="btn btn-danger">Delete</a>
                    <a class="btn btn-warning" onclick="deleteFunction(@item.Id);">Delete 2</a>
                </td>
            </tr>
        }
    </tbody>
</table>

